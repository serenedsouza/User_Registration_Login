@model WebApplication1.Models.LoginViewModel

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    
    <div class="form-group">
        @Html.LabelFor(m => m.EmailOrMobile)
        @Html.TextBoxFor(m => m.EmailOrMobile, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.EmailOrMobile, "", new { @class = "text-danger" })
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.Pass)
        @Html.PasswordFor(m => m.Pass, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Pass, "", new { @class = "text-danger" })
    </div>
    
    <button type="submit" class="btn btn-primary">Login</button>
}